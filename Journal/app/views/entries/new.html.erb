<%= stylesheet_link_tag "styles.css" %>
<style>
h1 {text-align: center;}
p {text-align: left;}
div {text-align: center;}
</style>
<br>
<h1>New Entry</h1>

<br>

<%= form_with(model: @entry, url: entries_path) do |form| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<%= form_with(model: @entry) do |form| %>
  <div>
      <%= form.label :name, 'Name:' %>
      <div>
        <%= form.text_field :name, :size => 25 %>
      </div>
    </div>
  <div>
      <%= form.label :link, 'Link:' %>
      <div>
        <%= form.text_field :link, :size => 25 %>
      </div>
  </div>

  <br>
  <br>
  <div>
    <%= button_tag(type: 'submit', class: "btn btn-success") do %>
      Create Entry
    <% end %>
    <%= link_to "Back to home", root_path, {class:"btn btn-danger"} %>
  </div>

<% end %>