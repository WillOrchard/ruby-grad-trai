<style>
h1 {text-align: center;}
p {text-align: left;}
div {text-align: center;}
</style>
<br>
<h1>All Entries</h1>
<br>

<div>
  <div class="container-fluid">
    <table class="table">
      <thead>
        <tr>
          <th class="col-sm-4">Name</th>
          <th class="col-sm-4">Link</th>
          <th class="col-sm-4"></th>
        </tr>
      </thead>
      <% @entries.each do |entry| %>
        <tbody>
          <tr>
            <td><%= entry.name %></td>
            <td><%= link_to entry.link, entry.link, target: :_blank %></td>
            <td>
              <div align="center">
              <div style="display: inline-block"> <%= button_to "Delete", entry, method: :delete, data: { confirm: "Are you sure you want to delete this Project ?"}, class:"btn btn-outline-primary" %> </div>
              <div style="display: inline-block"> <%= link_to 'Edit', edit_entry_path(entry), {class:"btn btn-outline-primary"} %> </div>
              </div>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
