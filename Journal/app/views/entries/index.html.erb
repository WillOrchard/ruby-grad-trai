<style>
h1 {text-align: center;}
p {text-align: left;}
div {text-align: center;}
</style>

<h1>All Entries</h1>

<div>
 <% @entries.each do |entry| %>
  <div class="container-fluid">
    <table class="table">
      <thead>
        <tr>
          <th class="col-sm-4">Name</th>
          <th class="col-sm-4">Link</th>
          <th class="col-sm-4"></th>
        </tr>
      </thead>
        <tbody>
          <tr>
            <td><%= entry.name %></td/>
            <td><%= entry.link %></td>
            <td><%= button_to "Delete", entry, method: :delete, data: { confirm: "Are you sure you want to delete this Project ?"} %></td>
          </tr>
        </tbody>
    </table>
  </div>
 <% end %>
</div>
