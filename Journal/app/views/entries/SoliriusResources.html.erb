<%= stylesheet_link_tag "styles.css" %>

<style>
h1 {text-align: center;}
p {text-align: left;}
div {text-align: center;}
</style>
<br>
<h1>Solirius Resources</h1>
<br>
<div>
  <div class="container-fluid">
    <table class="table">
        <thead>
          <tr>
            <th class="col-sm-4"><h3>Name</h3></th>
            <th class="col-sm-4"><h3>Link</h3></th>
            <th class="col-sm-4"></th>
          </tr>
        </thead>
        <% @entries.each do |entry| %>
          <tbody>
            <tr>
              <td valign="middle"><%= entry.name %></td>
              <td valign="middle"><%= link_to ('<i class="fa fa-external-link"></i>').html_safe, entry.link, target: :_blank %></td>
              <td>
                <div>
                <div style="display: inline-block"> <%= button_to "Delete", entry_path(entry), method: :delete, class:"btn btn-outline-black" %> </div>
                <div style="display: inline-block"> <%= link_to "Edit", edit_entry_path(entry), class:"btn btn-outline-black" %> </div>
                </div>
              </td>
            </tr>
           </tbody>
         <% end %>
      </table>
   </div>
</div>